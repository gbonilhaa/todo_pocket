<h3>
    Seja bem vindo, efetue seu cadastro!
  </h3>
<div class="row">
    <div class="col-xs-1 col-sm-2 col-md-4">
    </div>
    <div class="col-xs-10">
      <form class="form-horizontal" role="form" method="post">
        <div class="form-group">
          <label for="nome" class="col-sm-2 control-label">Nome</label>
          <div class="col-sm-10">
            <input type="text" name="nome" class="form-control" id="nome" value="" required="required" placeholder="Nome">
          </div>
        </div>
        <div class="form-group">
          <label for="email" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <input type="email" name="email" class="form-control" required="required" value="" id="email" placeholder="Email">
          </div>
        </div>
        <div class="form-group">
          <label for="senha" class="col-sm-2 control-label">Senha</label>
          <div class="col-sm-10">
            <input type="password" name="senha" class="form-control" required="required" id="senha" placeholder="Senha">
          </div>
        </div>
        <div class="form-group">
          <label for="confirma_senha" class="col-sm-2 control-label">Confirma senha</label>
          <div class="col-sm-10">
            <input type="password" name="confirma_senha" class="form-control" required="required" id="confirma_senha" placeholder="Confirme sua senha">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Cadastrar</button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-xs-1 col-sm-2 col-md-4">
    </div>
  </div>