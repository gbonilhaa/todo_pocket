<h3>
  Lista de Usuários |
      <a class="label label-default" href="<%= new_usuario_path %>">novo usuário</a> |
      <a class="label label-default" href="<%= tarefas_path %>">Tarefas</a>
</h3>

<table class="table table-hover">
    <thead>
  <tr>
      <th>Id</th>
      <th>Nome</th>
      <th>Email</th>
      <!--<th>Senha</th>-->
    </tr>
  </thead>
    <tbody>
  <% for usuario in @usuarios %>
          <tr>
          <td><%= usuario.id %></td>
          <td><%= usuario.nome %></td>
          <td><%= usuario.email %></td>
            <!--   EXIBIR SENHAS NO MENU USUARIOS
            <td><%= truncate usuario.password_digest %></td>-->
            <td>
              <span>

                <a href="<%= edit_usuario_path usuario %>" class="btn btn-default btn-sm" role="button, glyphicon glyphicon-remove">
                  <span class="glyphicon glyphicon-pencil"></span> Editar
                </a>

                <a href="<%= usuario_path usuario%>"
                           data-method="delete"
                           data-confirm="Tem Certeza?"
                           class="destroy, btn btn-danger btn-sm"
                           role="button">
                  <span class="glyphicon glyphicon-trash"></span>  Remover

                </a>
                </span>
            </td>
        </tr>
      <% end %>
  </tbody>
  </table>