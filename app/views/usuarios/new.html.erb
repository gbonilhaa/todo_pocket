<h3>
  Seja bem vindo, efetue seu cadastro!
</h3>
<div class="row">
  <div class="col-xs-1 col-sm-2 col-md-4">
  </div>
  <div class="col-xs-10">
    <%= form_for @usuario do |f| %>

        <div class="form-group">
            <%= f.label :nome %>
            <%= f.text_field :nome, class: 'form-control' %>
        </div>

        <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
              <%= f.label :password_digest, 'Senha' %>
              <%= f.password_field :password_digest, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.text_field :password_confirmation %>
        </div>
        <%= submit_tag 'Salvar', class: 'btn btn-primary pull-right' %>
        <a href="<%= usuarios_path %>" class="btn btn-primary pull-right">Cancelar</a>

    <% end %>

  </div>
</div>