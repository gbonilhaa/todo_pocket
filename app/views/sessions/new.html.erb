


<%= form_tag session_path, class: 'form-horizontal' do %>

    <div class="form-group">
      <%= label_tag :email, nil, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= email_field_tag 'email' , '', class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, 'Senha', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= password_field_tag 'password', '', class: 'form-control', required: true %><br>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag 'entrar', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>